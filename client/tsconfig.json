{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "typeRoots": ["*.d.ts"],
    "types": ["vite/client"],

    /* Path */
    "paths": {
      "@src/*": ["src/*"],
      "@assets/*": ["src/assets/*"],
      "@icon/*": ["src/assets/icon/*"],
      "@styles/*": ["src/assets/stylesheet/*"],
      "@static/*": ["src/static/*"],
      "@views/*": ["src/views/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
