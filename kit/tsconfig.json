{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./src",
    "typeRoots": ["*.d.ts"],

    /* Bundler mode */
    "moduleResolution": "node",
    "isolatedModules": false,
    "declaration": false,
    "sourceMap": false,
    "inlineSources": false,
    "outDir": "./dist",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Path */
    "paths": {
      "@src/*": ["./src/*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules", "dist", ".yarn", "./src/notes"
  ]
}
